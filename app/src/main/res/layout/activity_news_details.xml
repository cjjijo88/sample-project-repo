<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.newsportal.data.model.ArticleData" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:minHeight="150dp"
                app:layout_constraintHeight_percent=".38"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                bind:imgUrl="@{vm.urlToImage}"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                app:layout_constraintWidth_percent=".84"
                app:layout_constraintHeight_percent=".12"
                app:layout_constraintTop_toBottomOf="@+id/iv_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{vm.title}"/>

            <TextView
                android:id="@+id/tv_author_txt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                android:textSize="14sp"
                app:layout_constraintWidth_percent=".14"
                app:layout_constraintHeight_percent=".05"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Author:"/>

            <TextView
                android:id="@+id/tv_author_value"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                app:layout_constraintWidth_percent=".14"
                app:layout_constraintHeight_percent=".05"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toEndOf="@+id/tv_author_txt"
                android:text="@{vm.author}"/>

            <TextView
                android:id="@+id/tv_news_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textSize="14sp"
                app:layout_constraintWidth_percent=".14"
                app:layout_constraintHeight_percent=".05"
                app:layout_constraintTop_toBottomOf="@+id/tv_author_txt"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Date:"/>

            <TextView
                android:id="@+id/tv_news_date_value"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                app:layout_constraintWidth_percent=".14"
                app:layout_constraintHeight_percent=".05"
                app:layout_constraintTop_toBottomOf="@+id/tv_author_value"
                app:layout_constraintStart_toEndOf="@+id/tv_author_txt"
                android:text="@{vm.publishedAt}"/>


            <TextView
                android:id="@+id/tv_news_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                app:layout_constraintWidth_percent=".84"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_news_date"
                android:text="@{vm.content}"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>